{
  "name": "xcm-monorepo",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install && preconstruct dev",
    "build:packages": "preconstruct build",
    "dev:demo": "yarn workspace xcm-demo dev",
    "build:demo": "yarn workspace xcm-demo build",
    "dev:squid": "make dev",
    "build:squid": "make build",
    "dev": "concurrently \"yarn dev:demo\" \"yarn dev:squid\"",
    "build": "yarn build:packages && yarn build:demo && yarn build:squid"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@preconstruct/cli": "^2.2.2",
    "concurrently": "^7.3.0",
    "eslint": "^8.28.0",
    "eslint-config-wayfinder": "workspace:^",
    "husky": "^8.0.2",
    "import-sort-style-module": "^6.0.0",
    "prettier": "^2.8.0",
    "prettier-plugin-import-sort": "^0.0.7",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.3"
  },
  "prettier": {
    "printWidth": 120,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
